<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2030"
    tools:context=".profile.LoginActivity">

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/inter_bold"
        android:text="Login"
        android:textColor="#00FFD9"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPersonName2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/primary_font_color"
        android:textSize="17sp"
        android:fontFamily="@font/inter"
        android:background="@drawable/et_bg"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView3"/>

    <EditText
        android:id="@+id/editTextEmail2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/primary_font_color"
        android:textSize="17sp"
        android:fontFamily="@font/inter"
        android:background="@drawable/et_bg"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonName2"/>

    <EditText
        android:id="@+id/editContactNumber2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Contact Number"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/primary_font_color"
        android:textSize="17sp"
        android:fontFamily="@font/inter"
        android:background="@drawable/et_bg"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail2"/>

    <EditText
        android:id="@+id/editTextPassword3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:background="@drawable/et_bg"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:hint="Password"
        android:textColor="@color/primary_font_color"
        android:textColorHint="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContactNumber2" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="Confirm"
        android:paddingStart="8dp"
        android:textColor="#f2f2f2"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/getstarted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword3"/>

    <TextView
        android:id="@+id/signupRedirect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not yet registered? Signup"
        android:textSize="14sp"
        android:textColor="#f2f2f2"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"/>


</androidx.constraintlayout.widget.ConstraintLayout>